<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#63F7E2"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardivew_Id"
        android:background="#A8AC6E"
        app:cardElevation="15dp"
        android:textAlignment="center"
        app:cardCornerRadius="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/semester_add_textview"
            android:layout_width="76dp"
            android:layout_height="70dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:background="#B0C4ADA4"
            android:text="6th"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="20sp" />

    </androidx.cardview.widget.CardView>

    <TextView

        android:id="@+id/deparment_add_textview"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="20sp"
        android:text="Computer"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/cardivew_Id"
        android:layout_toRightOf="@+id/cardivew_Id"
        android:layout_marginStart="12dp"
        android:layout_marginTop="11dp" />

 <TextView

        android:layout_below="@id/deparment_add_textview"
        android:id="@+id/subject_add_textview"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="15sp"
        android:text="Database Managment System"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/cardivew_Id"
        android:layout_toRightOf="@+id/cardivew_Id"
        android:layout_marginStart="12dp"
        android:layout_marginTop="11dp" />


</RelativeLayout>